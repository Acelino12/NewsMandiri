<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imagedetail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:background="@drawable/loading" />

    <LinearLayout
        android:id="@+id/layoutheadline"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/background_headline"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutheader"
        android:orientation="vertical">

        <TextView
            android:id="@+id/juduldetail"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="7 kelebihan dan kekurangan android studio dibandingkan VSC"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingVertical="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/penerbitlistberita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BBC News"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tanggallistberita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10 Jan, 2023"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/isidetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Earlier this year, GitHub rolled out Copilot Chat, a ChatGPT-like
            programming-centric chatbot for organizations subscribed to Copilot for Business.
             Copilot Chat more recently came to individual Copilot customers — those paying
              $10 per month — in beta. And now, GitHub’s launching Chat in general
              availability for all users."
            android:textSize="14sp"/>

    </LinearLayout>


</LinearLayout>